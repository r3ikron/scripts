<!doctype html>
<html lang="en" class="h-100" data-bs-theme="auto">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{PROJECT_TITLE}}</title>
  <link href="/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="d-flex flex-column h-100">
  <div class="container-fluid mt-2">
    <h1 class="fw-bold">Sign in</h1>
    <form method="post" action="/signin">
      <div class="form-floating mb-3">
        <input type="email" class="form-control rounded-3" id="email" name="email" placeholder=""
          aria-describedby="emailHelp">
        <label for="email">Email address</label>
      </div>
      <div class="form-floating mb-3">
        <input type="password" class="form-control rounded-3" id="password" name="password" placeholder="">
        <label for="password">Password</label>
      </div>
      <button class="w-100 btn btn-lg rounded-3 btn-primary" type="submit">Sign in</button>
    </form>
  </div>

  <% if (typeof validation !="undefined" ) { %>
  <script type="text/javascript"><% validation.split('\n').forEach(message => { %>
    console.log("<%= message %>");<% }) %>
  </script>
  <% } %>

  <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>
